{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": ["typescript", "react", "nextjs", "jsx-a11y"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "rules": {
    "no-unused-vars": "warn",
    "typescript/no-explicit-any": "warn",
    "react/react-in-jsx-scope": "off"
  },
  "ignorePatterns": [".next/**", "out/**", "build/**"]
}
